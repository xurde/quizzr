<div id="main-col">
	<h1>Register your Quizzr account</h1>
	<%= error_messages_for :user %>
	<% form_for :user, :url => users_path, :html => {:id => 'signup', :class => 'main-form'} do |f| -%>
	<p><label for="login">Username</label>
	<%= f.text_field :login, :size => 20, :maxlength => 40 %></p>

	<p><label for="email">Email</label>
	<%= f.text_field :email, :size => 30, :maxlength => 100 %></p>

	<p><label for="password">Password</label>
	<%= f.password_field :password, :size => 20, :maxlength => 40 %></p>

	<p><label for="password_confirmation">Repeat that</label>
	<%= f.password_field :password_confirmation, :size => 20, :maxlength => 40 %></p>

	<div id="captcha_container">
		<p>Are you a robot planning to rule the World?</p>
		<p><%= recaptcha_tags( :display => { :theme => 'blackglass' }) %></p>
	</div>
	
	<p class="form-submit"><%= image_submit_tag('button-signup.png') %></p>
	<% end -%>
</div>