<div id="main-col">
	<h1>Signup for your Quizzr account</h1>
	<%= error_messages_for :user %>
	<% form_for :user, :url => users_path, :html => {:id => 'signup', :class => 'main-form'} do |f| -%>
	<p><label for="login">Username</label>
	<%= f.text_field :login %></p>

	<p><label for="email">Email</label>
	<%= f.text_field :email %></p>

	<p><label for="password">Password</label>
	<%= f.password_field :password %></p>

	<p><label for="password_confirmation">Repeat that</label>
	<%= f.password_field :password_confirmation %></p>

	<p><label for="captcha_validation">Are you a robot planning to rule the World?</label>
	<%= recaptcha_tags( :display => { :theme => 'blackglass' }) %></p>
	<p class="form-submit"><%= image_submit_tag('button-signup.png') %></p>
	<% end -%>
</div>