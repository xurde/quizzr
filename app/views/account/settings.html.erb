<h1>Settings</h1>

<h3>Avatar</h3>

<%= avatar_for_user( @me ) %>
<%= error_messages_for :avatar %>

<% form_for(:avatar, :url => url_for( :action => 'update_avatar' ),
                      :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="avatar">Select your avatar:</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= submit_tag 'Upload' %>
  </p>
<% end -%>

<h3>Twitter Integration</h3>
 
<% form_for( :user, :url => url_for( :action => 'update_twitter_profile' )) do |f| -%>
  <p>
    <label for="twitter_account">Your Twitter Username</label>
    <%= f.text_field :twitter_account %>
  </p>
  <p>
    <label for="twitter_password">Your Twitter Password</label>
    <%= f.password_field :twitter_password %>
  </p>
  <p>
    <%= submit_tag 'Update' %>
  </p>
<% end -%>
