<div id="main-col">
	<h1>Forgotten password?</h1>
	<% form_tag url_for( :action => 'password_forgotten' ), :id => 'password_recover', :class => 'main-form' do -%>

	<p><label class="not-indented" for="email">Tell me your email</label>
	<%= text_field_tag 'email' %></p>

	<p><%= image_submit_tag('button-recover.png') %></p>
	<% end -%>
</div>