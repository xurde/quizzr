<div id="main-col">
	<%= render :partial => 'account_submenu' %>
	<%= error_messages_for :user %>
		<% form_for(:user, :url => url_for( :action => 'update_notices' ), :html => {:id => 'notices_edit', :class => 'main-form tabbed-form'} ) do |f| -%>
		  <p>
		    <label for="notices_by_email">Notices by email</label>
		    <%= f.select :notices_by_email, [['Yes, please', 'A' ], ['No, thanks', 'I' ]] %>
		  </p>
		  <fieldset>
		    <legend align="right">EVENTS</legend>
		  <p>
		    <label for="notice_when_new_follower">New follower</label>
			<%= f.check_box :notice_when_new_follower %>
		  </p>
		  <p>
		    <label for="notice_when_your_quizz_solved">Your quizz solved</label>
		    <%= f.check_box :notice_when_your_quizz_solved %>
		  </p>
		  <p>
		    <label for="notice_when_played_quizz_solved">Played quizz solved</label>
		    <%= f.check_box :notice_when_played_quizz_solved %>	
		  </p>
		  </fieldset>
		  <fieldset>
		    <legend align="right">NEWSLETTERS</legend>
		    <p>
  		    <label for="weekly_newsletter">Weekly Newsletter</label>
  		    <%= f.check_box :weekly_newsletter %>	
  		  </p>
  		  <p>
  		    <label for="monthly_newsletter">Monthly Newsletter</label>
  		    <%= f.check_box :monthly_newsletter %>
  		  </p>
		  </fieldset>
		  <p class="form-submit"><%= image_submit_tag('button-update.png')%></p>
		<% end -%>
</div>