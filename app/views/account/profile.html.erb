<div id="main-col">
	<%= render :partial => 'account_submenu' %>
	<%= error_messages_for :user %>
		<% form_for(:user, :url => url_for( :action => 'update_profile' ), :html => {:id => 'account_edit', :class => 'main-form tabbed-form'} ) do |f| -%>
		  <p>
		    <label for="name">Name</label>
		    <%= f.text_field :name %>
		  </p>
		  <p>
		    <label for="email">E-mail</label>
		    <%= f.text_field :email %>
		  </p>
		  <p>
		    <label for="website">Website</label>
		    <%= f.text_field :website %>
		  </p>
		  <p>
		    <label for="gender">Gender</label>
		    <%= f.select :gender, [ ['Not saying', 'N'], ['Male', 'M'], ['Female', 'F'] ] %></p>
		  </p>
		  <p>
		    <label for="birthdate">Birth date</label>
		    <%= f.date_select :birthdate, :end_year => 1927, :start_year => Time.now.year, :order => [ :month, :day, :year], :default => 25.years.from_now  %></p>
		  </p>
		  <p>
		    <label for="country">Country</label>
		    <%= f.select :country, COUNTRIES.collect {|c| [ c.to_s ] } %></p>
		  </p>
		  <p>
		    <label for="city">City</label>
		    <%= f.text_field :city, :size => 15 %>
		  </p>
		  <p class="form-submit"><%= image_submit_tag('button-update.png')%></p>
		<% end -%>
</div>