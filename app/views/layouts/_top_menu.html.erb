<div id="top_menu">
	<ul id='user_menu'>
	<% if !@me.nil? %>
		<li id="user_status">Logged as: <%= avatar_for_user(@me, :micro, false ) %> <%= link_to_user(@me, false) %> | <%= link_to 'Logout', logout_path, :class => 'action' %></li>
	<% else %>
		<li><%= link_to 'Login', login_path %> or <%= link_to 'Register', signup_path %></li>
	<% end %>
	</ul>
	<% if !@me.nil? %>
	<ul id='main_menu'>
		<li><%= link_to 'Home', url_for(:controller => 'home') %></li>
		<li><%= link_to 'Profile', url_for(:controller => 'users', :user => @me.login ) %></li>
		<li><%= link_to 'Public', url_for(:controller => 'index') %></li>
		<li><%= link_to 'Account', url_for(:controller => 'account', :action => 'profile') %></li>
	</ul>
	<% end %>
</div>
