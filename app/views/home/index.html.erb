<div id="main-col">
  <div id="form_quizz">
    <% form_tag url_for( :controller => 'quizzs', :action => 'create' ) do -%>
      <p><label for="question">Question</label>
      <%= text_area_tag 'question', 'quizz it here!', :size => '55x2' %></p>
      <p><label for="correct">Correct Answer</label>
      <%= text_field_tag 'correct_answer' %></p>
      <p><%= submit_tag 'Quizz' %></p>
    <% end -%>
  </div>
  <ul id="quizzs-tab">
	<li><%= link_to 'For You', url_for( :filter => nil ) %></li>
	<li><%= link_to 'By You', url_for( :filter => 'your' ) %></li>
	<li><%= link_to 'Won', url_for( :filter => 'won' ) %></li>
	<li><%= link_to 'Failed', url_for( :filter => 'failed' ) %></li>
  </ul>
  <ul id="quizzlist">
    <%= render :partial => 'quizz', :collection => @quizzs_for_me %>
  </ul>
  <div id="home-pagination" class="pagination"><%= will_paginate(@quizzs_for_me) %></div>
</div>
<%= render :partial => '/user_info', :object => @me %>